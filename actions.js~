$(document).ready(function() {
	$("#append").hide();
	$("input.addTime").click(function() {
		var project = $(this).parent().parent().children(":first").text();
		var collegue = $(this).attr("value").split(":")[0];
		$("#append").show();
		$("#append span#collegue").text(collegue);
		$("#append span#project").text(project);
		$("#append input[type=button]").click(function() {
			$.ajax({
				"url": index.php,
				"data": {
					"collegue": collegue,
					"project": project,
					"minutes": $("#append input[type=input]").value()
				},
				"success": function() {
					$("#append").hide();
				});
			});
		});
	});
});
